version: '3'
services:
  clash:
    container_name: clash-meta
    image: ${REGISTRY}/${REPO}/mihomo:${META_TAG}  # 最新版用 metacubex/mihomo:Alpha
    restart: always
    pid: host
    ipc: host
    environment:
      - SUBSCRIBE_URL=${SUBSCRIBE_URL}
    ports:
      - '7890:7890'
      - '9090:9090'
    cap_add:
      - ALL
    security_opt:
      - apparmor=unconfined
    volumes:
      - ~/data/clash_meta/clash:/root/.config/mihomo
      - /dev/net/tun:/dev/net/tun
      # 共享host的时间环境
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro

  metacubexd:
    container_name: metacubexd
    image: ${REGISTRY}/metacubex/metacubexd
    restart: always
    network_mode: bridge
    ports:
      - '28002:80'
    volumes:
      - ~/data/clash_meta/caddy:/config/caddy
      # 共享host的时间环境
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro